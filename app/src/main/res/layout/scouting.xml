<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.stephenogden.a1595scoutingapp.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Space
        android:id="@+id/AutonomousPad"
        android:layout_width="50dp"
        android:layout_height="95dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:id="@+id/TeamNumberPad" />

    <Space
        android:id="@+id/TeleOpPad"
        android:layout_width="50dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Space
        android:id="@+id/CommentPad"
        android:layout_width="100dp"
        android:layout_height="360dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Space
        android:id="@+id/ButtonsPad"
        android:layout_width="5dp"
        android:layout_height="480dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/teamNumberHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teamNumberHeader"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/TeamNumberPad"
        app:layout_constraintLeft_toRightOf="@+id/TeamNumberPad"
        />

    <EditText
        android:id="@+id/teamNumber"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TeamNumberPad"
        android:textSize="20sp"
        android:inputType="numberSigned"
        android:text="@string/teamNumberPlaceholder"
        app:layout_constraintLeft_toRightOf="@+id/teamNumberHeader"
        />

    <TextView
        android:id="@+id/autoHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autoHeaderText"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AutonomousPad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <CheckBox
        android:id="@+id/autoCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:buttonTint="@color/white"
        android:text="@string/hasAuto"
        app:layout_constraintTop_toBottomOf="@+id/autoHeader"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/teleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teleHeaderText"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/TeleOpPad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/teleCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:buttonTint="@color/white"
        android:text="@string/hasTelePlaceholder"
        app:layout_constraintTop_toBottomOf="@+id/teleHeader"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/endGameCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:buttonTint="@color/white"
        android:text="@string/endGamePlaceholder"
        app:layout_constraintTop_toBottomOf="@+id/teleCheck"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:text="@string/comment"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/commentsHeader"
        app:layout_constraintTop_toBottomOf="@+id/CommentPad" />

    <TextView
        android:id="@+id/commentsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commentHeader"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/CommentPad"
        app:layout_constraintLeft_toRightOf="@+id/CommentPad"
        />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Cancel"
        android:textColor="@color/white"
        android:background="@drawable/redbutton"
        app:layout_constraintRight_toLeftOf="@+id/ButtonsPad"
        app:layout_constraintTop_toBottomOf="@+id/ButtonsPad"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Submit"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/ButtonsPad"
        app:layout_constraintLeft_toRightOf="@+id/ButtonsPad"
        android:background="@drawable/greenbutton"
        />




</android.support.constraint.ConstraintLayout>