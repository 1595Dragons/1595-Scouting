<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#45c728" />
            <gradient android:angle="-90" android:startColor="#0f7601" android:endColor="#40e61f"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#438b38" />
            <solid android:color="#2bae17"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2e891a" />
            <gradient android:angle="-90" android:startColor="#29b710" android:endColor="#0e6902" />
        </shape>
    </item>
</selector>