<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#c72828" />
         <gradient android:angle="-90" android:startColor="#760104" android:endColor="#e61f23"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#8b3838" />
         <solid android:color="#ae171b"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#891a1a" />
         <gradient android:angle="-90" android:startColor="#b71013" android:endColor="#690204" />
     </shape>
 </item>
</selector>