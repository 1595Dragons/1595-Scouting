<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dragons.Dragons.scoutingapp" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconsquare"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconround"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.dragons.Dragons.scoutingapp.main_activity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.dragons.Dragons.scoutingapp.settings"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="org.dragons.Dragons.scoutingapp.data_collection"
            android:label="@string/teamToScout">
        </activity>
        <activity
            android:name="org.dragons.Dragons.scoutingapp.transmit"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="org.dragons.Dragons.scoutingapp.pitscouting"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".error_activity"
            android:label="Error">
        </activity>
    </application>

</manifest>