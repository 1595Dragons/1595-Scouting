<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    tools:context="com.example.stephenogden.a1595scoutingapp.main_activity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:id="@+id/genericPad"
                android:layout_width="50dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/pitScoutNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/genericPad">

                <TextView
                    android:id="@+id/pitScoutNumberHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pitScoutTeamNumber"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/teamNumber"
                    android:layout_width="75dp"
                    android:layout_height="fill_parent"
                    android:background="@color/darkGray"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/pitScoutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pitScoutNumber">

                <TextView
                    android:id="@+id/putScoutNameHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pitScoutTeamName"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/teamName"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/darkGray"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/DTConfigHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/pitScoutDTConfigHeader"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pitScoutName" />

            <RadioGroup
                android:id="@+id/DTConfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/DTConfigHeader">

                <RadioButton
                    android:id="@+id/DTStandard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Standard"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                    android:id="@+id/DTMecanum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Mecanum"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                    android:id="@+id/DTSwerve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Swerve"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                android:id="@+id/DTHolonomic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DTConfig_Holonomic"
                android:textColor="@color/white"
                android:fontFamily="@font/arial"
                android:textSize="17dp"
                android:theme="@style/customBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                    android:id="@+id/DTSlide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Slide"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                    android:id="@+id/DTButterfly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Butterfly"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                    android:id="@+id/DTGrasshopper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Grasshopper"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                    android:id="@+id/DTKiwi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Kiwi"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                    android:id="@+id/DTNona"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Nonadrive"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                    android:id="@+id/DTOctocanum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Octocanum"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

                <RadioButton
                    android:id="@+id/DTOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DTConfig_Other"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"/>

            </RadioGroup>

            <LinearLayout
                android:id="@+id/wheelSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/DTConfig">

                <TextView
                    android:id="@+id/pitScoutWheelSizeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/WheelsizeHeader"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/wheelSizeText"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/darkGray"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wheelSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wheelSize">

                <TextView
                    android:id="@+id/pitScoutWheelSpaceHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/WheelspacingHeader"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/wheelSpaceText"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/darkGray"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/GrondClearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wheelSpace">

                <TextView
                    android:id="@+id/groundClearanceHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/GroundClearanceHeader"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/groundClearance"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/darkGray"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pitScoutingAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/GrondClearance">

                <TextView
                    android:id="@+id/AutoHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="20sp"
                    android:text="@string/autoHeaderText"/>
                
                <CheckBox
                    android:id="@+id/pitNoAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    android:text="@string/pitScoutingNoAuto"/>

                <CheckBox
                    android:id="@+id/pitBasicAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    android:text="@string/pitScoutingBasicAuto"/>

                <CheckBox
                    android:id="@+id/pitSwitchAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    android:text="@string/pitScoutingSwitchAuto"/>

                <CheckBox
                    android:id="@+id/pitScaleAuto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    android:text="@string/pitScoutingScaleAuto"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pitScoutingTele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pitScoutingAuto">

                <TextView
                    android:id="@+id/TeleHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/arial"
                    android:textSize="20sp"
                    android:text="@string/teleHeaderText"/>

                <CheckBox
                    android:id="@+id/pitNoTele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    android:text="@string/pitScoutingNoTele"/>

                <CheckBox
                    android:id="@+id/pitSwitchTele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    android:text="@string/pitScoutingSwitchTele"/>

                <CheckBox
                    android:id="@+id/pitScaleTele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:theme="@style/customBox"
                    android:text="@string/pitScoutingScaleTele"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pitScoutingClimb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pitScoutingTele">

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>