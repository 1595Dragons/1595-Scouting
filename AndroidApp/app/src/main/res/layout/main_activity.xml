<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".main_activity">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="250dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:contentDescription="@string/logo"
        android:visibility="visible"
        app:srcCompat="@mipmap/attempt2" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/greenbutton"
        android:fontFamily="@font/arial"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:text="@string/startScout"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/graybutton"
        android:fontFamily="@font/arial"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:text="@string/settings"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/remoteDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/settings"
        android:layout_marginTop="50dp"
        android:text="Connected to: "
        android:textSize="15sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/latency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/remoteDeviceName"
        android:layout_marginTop="10dp"
        android:text="Current ping: "
        android:textSize="15sp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/latency"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/arial"
        android:text="Build date: 17:20; 1/16/2019"
        android:textSize="12sp" />


</RelativeLayout>
