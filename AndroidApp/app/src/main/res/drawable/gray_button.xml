<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#bcbcbc" />
            <gradient android:angle="-90" android:startColor="#707170" android:endColor="#dfdfdf"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#868786" />
            <solid android:color="#aeaeae"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#919191" />
            <gradient android:angle="-90" android:startColor="#969696" android:endColor="#636363" />
        </shape>
    </item>

</selector>